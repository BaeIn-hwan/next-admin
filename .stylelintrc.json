{
  "extends": ["stylelint-config-recommended", "stylelint-config-standard", "stylelint-config-standard-scss"],
  "overrides": [
    {
      "files": ["*.js"],
      "customSyntax": "postcss-lit"
    }
  ],
  "plugins": ["stylelint-scss", "stylelint-order"],
  "rules": {
    "at-rule-no-unknown": null,
    "color-hex-length": "short",
    "comment-empty-line-before": ["never", { "ignore": ["after-comment", "stylelint-commands"] }],
    "comment-no-empty": true,
    "function-calc-no-unspaced-operator": true,
    "media-feature-range-notation": "prefix",
    "order/order": [],
    "order/properties-order": [
      "content",
      "overflow",
      "overflow-x",
      "overflow-y",
      "display",
      "order",
      "flex",
      "flex-direction",
      "flex-wrap",
      "align-items",
      "justify-content",
      "gap",
      {
        "groupName": "Position",
        "properties": ["position", "z-index", "top", "right", "bottom", "left"]
      },
      {
        "groupName": "Box Model",
        "properties": [
          "width",
          "min-width",
          "max-width",
          "height",
          "min-height",
          "max-height",
          "margin",
          "margin-top",
          "margin-right",
          "margin-bottom",
          "margin-left",
          "padding",
          "padding-top",
          "padding-right",
          "padding-bottom",
          "padding-left",
          "border",
          "border-radius"
        ]
      },
      "background",
      "background-color",
      "background-image",
      "background-position",
      "background-repeat",
      "background-size",
      "font",
      "font-size",
      "font-weight",
      "font-family",
      "font-style",
      "font-smoothing",
      "color",
      "line-height",
      "text-align",
      "vertical-align",
      "text-decoration",
      "transform",
      "transition",
      "box-shadow",
      "opacity",
      "table-layout",
      "border-collapse",
      "border-spacing",
      "appearance",
      "box-sizing"
    ],
    "scss/at-rule-conditional-no-parentheses": null,
    "scss/at-rule-no-unknown": null
  }
}
